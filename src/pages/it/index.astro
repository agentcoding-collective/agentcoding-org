---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Features from '../../components/Features.astro';
import Carousel from '../../components/Carousel.astro';
import CTA from '../../components/CTA.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import { translations } from '../../i18n/translations';

const t = translations.it;
---

<Layout title="Agent Coding - Strategia Umana. Tattiche AI." lang="it">
  <LanguageSwitcher />

  <Hero title={t.hero.title} subtitle={t.hero.subtitle} cta={t.hero.cta} />

  <Features title={t.features.title} />

  <Carousel title={t.carousel.title} slides={t.carousel.slides} />

  <CTA title={t.cta.title} discord={t.cta.discord} github={t.cta.github} twitter={t.cta.twitter} />
</Layout>
