---
interface Props {
  title: string;
  subtitle: string;
  cta: string;
}

const { title, subtitle, cta } = Astro.props;
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-50 to-white"
>
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-10 w-64 h-64 bg-indigo-500 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-purple-500 rounded-full blur-3xl"></div>
  </div>

  <div class="hero-content relative z-10 max-w-6xl mx-auto px-6 py-20 text-center">
    <div
      class="inline-block px-4 py-1.5 mb-6 text-sm font-medium text-indigo-700 bg-indigo-50 rounded-full"
    >
      New Development Paradigm
    </div>

    <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6 leading-tight">
      {title}
    </h1>

    <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto font-light">
      {subtitle}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href="#get-started"
        class="group flex items-center gap-2 px-8 py-3 bg-indigo-600 text-white rounded-lg font-medium hover:bg-indigo-700 transition-all text-sm"
      >
        {cta}
        <svg
          class="w-4 h-4 group-hover:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </a>
      <a
        href="#features"
        class="px-8 py-3 bg-white text-gray-700 border border-gray-300 rounded-lg font-medium hover:bg-gray-50 transition-all text-sm"
      >
        Learn More
      </a>
    </div>

    <div class="grid grid-cols-3 gap-8 mt-16 pt-8 border-t border-gray-200 max-w-2xl mx-auto">
      <div>
        <div class="text-3xl font-bold text-gray-900">5+</div>
        <div class="text-sm text-gray-600 mt-1">Autonomy Levels</div>
      </div>
      <div>
        <div class="text-3xl font-bold text-gray-900">100%</div>
        <div class="text-sm text-gray-600 mt-1">Open Source</div>
      </div>
      <div>
        <div class="text-3xl font-bold text-gray-900">1k+</div>
        <div class="text-sm text-gray-600 mt-1">Developers</div>
      </div>
    </div>
  </div>
</section>

<script>
  let ticking = false;

  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        const hero = document.querySelector('.hero-content');
        if (hero) {
          const scrolled = window.pageYOffset;
          const rate = scrolled * 0.3;
          (hero as HTMLElement).style.transform = `translateY(${rate}px)`;
        }
        ticking = false;
      });
      ticking = true;
    }
  });
</script>
