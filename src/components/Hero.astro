---
// Component receives translations as props to support multiple languages
interface Props {
  title: string;
  subtitle: string;
  cta: string;
}

const { title, subtitle, cta } = Astro.props;
---

<section class="parallax-section flex items-center justify-center bg-gradient-to-br from-blue-900 to-purple-900 text-white">
  <!-- data-scroll attributes enable parallax on this element -->
  <div data-scroll data-scroll-speed="2" class="text-center px-6">
    <h1 class="text-6xl md:text-8xl font-bold mb-6">{title}</h1>
    <p class="text-2xl md:text-3xl mb-8 opacity-90">{subtitle}</p>
    <a 
      href="#cta" 
      class="inline-block bg-white text-blue-900 px-8 py-4 rounded-lg font-semibold text-lg hover:scale-105 transition-transform"
    >
      {cta}
    </a>
  </div>
</section>
