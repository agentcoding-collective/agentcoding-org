---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section id="features" class="py-24 bg-gray-50">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">{title}</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        A disciplined approach combining human strategy with AI execution
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow">
        <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
          <svg
            class="w-5 h-5 text-indigo-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Developer as Architect</h3>
        <p class="text-sm text-gray-600">
          Focus on design decisions while AI handles implementation
        </p>
      </div>

      <div class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow">
        <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
          <svg
            class="w-5 h-5 text-indigo-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
            ></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Governed Autonomy</h3>
        <p class="text-sm text-gray-600">AI agents operate within clear boundaries and gates</p>
      </div>

      <div class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow">
        <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
          <svg
            class="w-5 h-5 text-indigo-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Evidence-Based</h3>
        <p class="text-sm text-gray-600">Every change comes with tests and verification</p>
      </div>

      <div class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow">
        <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
          <svg
            class="w-5 h-5 text-indigo-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Multiple Levels</h3>
        <p class="text-sm text-gray-600">Scale from L0 suggestions to L5 production deployment</p>
      </div>

      <div class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow">
        <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
          <svg
            class="w-5 h-5 text-indigo-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Iterative Process</h3>
        <p class="text-sm text-gray-600">Agents learn from feedback and self-correct</p>
      </div>

      <div class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow">
        <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
          <svg
            class="w-5 h-5 text-indigo-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Production Quality</h3>
        <p class="text-sm text-gray-600">Maintain standards with mandatory reviews</p>
      </div>
    </div>
  </div>
</section>
