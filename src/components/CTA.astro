---
interface Props {
  title: string;
  discord: string;
  github: string;
  twitter: string;
}

const { title, discord, github, twitter } = Astro.props;
---

<section id="cta" class="parallax-section flex items-center justify-center bg-gradient-to-br from-purple-900 to-blue-900 text-white">
  <div data-scroll data-scroll-speed="1.5" class="text-center px-6">
    <h2 class="text-5xl font-bold mb-12">{title}</h2>
    
    <div class="flex flex-wrap gap-6 justify-center">
      <a 
        href="https://discord.gg/agentcoding" 
        target="_blank"
        class="bg-indigo-600 hover:bg-indigo-700 px-8 py-4 rounded-lg font-semibold text-lg transition-colors"
      >
        {discord}
      </a>
      
      <a 
        href="https://github.com/agentcoding" 
        target="_blank"
        class="bg-gray-800 hover:bg-gray-900 px-8 py-4 rounded-lg font-semibold text-lg transition-colors"
      >
        {github}
      </a>
      
      <a 
        href="https://x.com/agentcoding" 
        target="_blank"
        class="bg-blue-500 hover:bg-blue-600 px-8 py-4 rounded-lg font-semibold text-lg transition-colors"
      >
        {twitter}
      </a>
    </div>
  </div>
</section>
